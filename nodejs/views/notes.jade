doctype html
html
  head
    title My notes
  body
    #title
      h1 Notekeeping made great again!
    #content
      table
        thead
          tr
            th
            th Notes
            th shared with
        tbody
          div
            form(action="/notes", method="post")
              label(for="note-input") New note
                input(id="note-input", type="text", value="", name="note")
                input(type="submit")
          for note in notes
            tr
              td
                input(type="checkbox", name="done")
              td= note
              td
                | zippy
    script(type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.3/jquery.min.js")
    script(type="text/javascript" src="public/javascript/global.js")
